set showmode
set relativenumber
set number
set incsearch

map \b :action Build<CR>

nnoremap <CR> G

" vp doesn't replace paste buffer
function! RestoreRegister()
    let @" = s:restore_reg
     return ''
 endfunction
function! s:Repl()
let s:restore_reg = @"
 return "p@=RestoreRegister()\<cr>"
endfunction
vmap <silent> <expr> p <sid>Repl()
